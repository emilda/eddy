	<!-- core.data package for create collection and datafile -->
	<package name="core.data" extends="core.merc" namespace="/data">

		<default-interceptor-ref name="authenStack" />

		<action name="*">
			<result type="freemarker">/web/data/{1}.ftl</result>
		</action>

		<!-- list owner collections -->
		<action name="listUserCollections" class="data.listAllColAction" method="listUserCollections">
			<result name="input">/web/common/action_error.ftl</result>
			<result name="success">/web/data/list_collections.ftl</result>
		</action>
		<!-- list all collections -->
		<action name="listAllCollections" class="data.listAllColAction" method="listAllCollections">
			<result name="input">/web/common/action_error.ftl</result>
			<result name="success">/web/data/list_collections.ftl</result>
		</action>

		<action name="showCreateCollection" class="data.createColAction" method="showCreateCollection">
			<result name="error">/web/common/action_error.ftl</result>
			<result name="success">/web/data/create_collection.ftl</result>
		</action>

		<action name="createCollection" class="data.createColAction" method="createCollection">
			<result name="input">/web/data/create_collection.ftl</result>
			<result name="success">/web/data/view_col_detail.ftl</result>
		</action>

		<!-- view the collection detail from collection list -->
		<action name="viewColDetails" class="data.viewColDetailsAction" method="viewCollectionDetail">
			<result name="input">/web/common/action_error.ftl</result>
			<result name="error">/web/common/action_error.ftl</result>
			<result name="success">/web/data/view_col_detail.ftl</result>
		</action>

		<!-- show the editing collection screen from the collection details -->
		<action name="showEditCollection" class="data.showColEditAction" method="showEditCollection">
			<result name="error">/web/common/action_error.ftl</result>
			<result name="success">/web/data/edit_collection.ftl</result>
		</action>

		<!-- edit the collection -->
		<action name="editCollection" class="data.editColAction" method="editCollection">
			<result name="input">/web/data/edit_collection.ftl</result>
			<result name="success">/web/data/view_col_detail.ftl</result>
		</action>

		<!-- delete the collection action -->
		<action name="deleteCollection" class="data.deleteColAction" method="deleteCollection">
			<result name="input">/web/common/action_error.ftl</result>
			<result name="error">/web/common/action_error.ftl</result>
			<result name="success">/web/data/delete_collection_success.ftl</result>
		</action>


		<!-- AJAX call to retrieve all user names -->
		<action name="getAllUserNames" class="data.collectionAction" method="getAllUserNames">
			<result name="success" type="json">
				<param name="noCache">true</param>
				<param name="root">userNames</param>
			</result>
		</action>

		<!-- This action is not used, please use the importFile action instead -->
		<!-- capture the user dataset -->
		<action name="importDataset" class="data.importDSAction" method="importDataset">
			<result name="input">/web/data/view_col_detail.ftl</result>
			<result name="success">/web/data/view_col_detail.ftl</result>
		</action>

		<!-- capture the user dataset, ajax version for file import -->
		<action name="importFile" class="data.importFileAction" method="importFile">
			<result name="success" type="json">
				<param name="noCache">true</param>
				<param name="root">responseData</param>
				<param name="contentType">text/html</param>
			</result>
		</action>

		<action name="uploadprogress" class="data.uploadProgress">
			<result name="success" type="rawtext" />
		</action>

		<!-- delete the dataset -->
		<action name="deleteDataset" class="data.deleteDStAction" method="deleteDataset">
			<result name="input">/web/data/view_col_detail.ftl</result>
			<result name="success">/web/data/view_col_detail.ftl</result>
		</action>

		<!-- export the dataset -->
		<action name="exportDataset" class="data.exportDSAction" method="exportDataset">
			<result name="input">/web/data/view_col_detail.ftl</result>
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">dsInputStream</param>
				<param name="contentDisposition">${contentDisposition}</param>
				<param name="bufferSize">${bufferSize}</param>
			</result>
		</action>

		<!-- view dataset -->
		<action name="viewDatasetData" class="data.viewDsDataAction" method="viewDatasetData">
			<result name="input">/web/data/view_dataset_error.ftl</result>
			<result name="success">/web/data/view_dataset_details.ftl</result>
		</action>

		<!-- view staging files -->
		<action name="viewStageFiles" class="data.stageTransferAction" method="discoverFiles">
			<result name="input">/web/stage/stage_transfer.ftl</result>
			<result name="error">/web/stage/stage_transfer.ftl</result>
			<result name="success">/web/stage/stage_transfer.ftl</result>
		</action>

		<!-- staging transfer -->
		<action name="stageTransfer" class="data.stageTransferAction" method="stageTransfer">
			<result name="input">/web/stage/stage_transfer.ftl</result>
			<result name="error">/web/stage/stage_transfer.ftl</result>
			<result name="success">/web/stage/stage_transfer_finished.ftl</result>
		</action>

		<!-- show the metadata registration -->
		<action name="showMdReg" class="data.mdRegAction" method="showMdReg">
			<result name="input">/web/mdreg/md_reg.ftl</result>
			<result name="error">/web/mdreg/mdreg_error.ftl</result>
			<result name="success">/web/mdreg/md_reg.ftl</result>
		</action>

		<!-- metadata registration preview -->
		<action name="preRegMd" class="data.mdRegAction" method="preRegMd">
			<result name="input">/web/mdreg/md_reg.ftl</result>
			<result name="error">/web/mdreg/mdreg_error.ftl</result>
			<result name="success">/web/mdreg/mdreg_preview.ftl</result>
		</action>

		<!-- metadata registration -->
		<action name="mdReg" class="data.mdRegAction" method="mdReg">
			<result name="input">/web/mdreg/mdreg_preview.ftl</result>
			<result name="error">/web/mdreg/mdreg_error.ftl</result>
			<result name="success">/web/mdreg/mdreg_finished.ftl</result>
		</action>

		<!-- show adding party options -->
		<action name="addPartyOptions" class="data.mdRegAction" method="addPartyOptions">
			<result name="input">/web/mdreg/addparty_error.ftl</result>
			<result name="error">/web/mdreg/addparty_error.ftl</result>
			<result name="success">/web/mdreg/party_options.ftl</result>
		</action>

		<!-- selected adding party type -->
		<action name="addPartyOpt" class="data.mdRegAction" method="addPartyOpt">
			<result name="input">/web/mdreg/party_options.ftl</result>
			<result name="error">/web/mdreg/addparty_error.ftl</result>
			<result name="success">/web/mdreg/add_party.ftl</result>
		</action>

		<!-- add a party from research master -->
		<action name="addRMParty" class="data.mdRegAction" method="addRMParty">
			<result name="input">/web/mdreg/add_party.ftl</result>
			<result name="error">/web/mdreg/add_party.ftl</result>
			<result name="success">/web/mdreg/add_party_success.ftl</result>
		</action>

		<!-- add an user-defined party -->
		<action name="addUDParty" class="data.mdRegAction" method="addUDParty">
			<result name="input">/web/mdreg/add_party.ftl</result>
			<result name="error">/web/mdreg/add_party.ftl</result>
			<result name="success">/web/mdreg/add_party_success.ftl</result>
		</action>

		<!-- collection righst or license options -->
		<action name="rightsOptions" class="data.rightsAction" method="showRightsOptions">
			<result name="input">/web/mdreg/rights_error.ftl</result>
			<result name="error">/web/mdreg/rights_error.ftl</result>
			<result name="success">/web/mdreg/rights_options.ftl</result>
		</action>

		<!-- select rights option -->
		<action name="selectRights" class="data.rightsAction" method="selectRights">
			<result name="input">/web/mdreg/rights_options.ftl</result>
			<result name="error">/web/mdreg/rights_options.ftl</result>
			<result name="success">/web/mdreg/rights_template.ftl</result>
		</action>

		<!--creative commons license -->
		<action name="cccllicense" class="data.rightsAction" method="cccllicense">
			<result name="input">/web/mdreg/rights_template.ftl</result>
			<result name="error">/web/mdreg/rights_template.ftl</result>
			<result name="success">/web/mdreg/rights_contents.ftl</result>
		</action>

		<!-- cc0 wavier license -->
		<action name="ccpdlicense" class="data.rightsAction" method="ccpdlicense">
			<result name="input">/web/mdreg/rights_template.ftl</result>
			<result name="error">/web/mdreg/rights_template.ftl</result>
			<result name="success">/web/mdreg/rights_waiver.ftl</result>
		</action>

		<!-- user-defined license -->
		<action name="userlicense" class="data.rightsAction" method="userlicense">
			<result name="input">/web/mdreg/rights_template.ftl</result>
			<result name="error">/web/mdreg/rights_template.ftl</result>
			<result name="success">/web/mdreg/rights_contents.ftl</result>
		</action>

		<!-- legal code -->
		<action name="legalcode" class="data.rightsAction" method="showLegalCode">
			<result name="success">/web/mdreg/legalcode.ftl</result>
		</action>

	</package>

